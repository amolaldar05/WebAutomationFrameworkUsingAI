<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AmazonWebAutomationSuite" parallel="classes" thread-count="4">

    <listeners>
        <listener class-name="org.Utils.TestListener"/>
        <listener class-name="org.Utils.RetryListener"/>
    </listeners>

    <!-- Set global runMode: local or grid -->
    <parameter name="runMode" value="local"/>
    <parameter name="hubUrl" value="http://192.168.0.102:4444/"/>

    <!-- Run tests on Chrome -->
    <test name="ChromeTests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="org.amazon.LoginTests"/>
            <class name="org.amazon.RegistrationTests"/>
        </classes>
    </test>

    <!-- Run tests on Firefox -->
    <test name="FirefoxTests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="org.amazon.LoginTests"/>
            <class name="org.amazon.RegistrationTests"/>
        </classes>
    </test>

    <!-- Run tests on Safari -->
    <test name="SafariTests">
        <parameter name="browser" value="safari"/>
        <classes>
            <class name="org.amazon.LoginTests"/>
            <class name="org.amazon.RegistrationTests"/>
        </classes>
    </test>

    <!-- Run tests on Edge -->
    <test name="EdgeTests">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="org.amazon.LoginTests"/>
            <class name="org.amazon.RegistrationTests"/>
        </classes>
    </test>

</suite>
