<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AmazonWebAutomationSuite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="org.Utils.TestListener"/>
    </listeners>

    <!-- Run tests on Chrome -->
    <test name="ChromeTests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="org.amazon.LoginTests"/>
            <class name="org.amazon.RegistrationTests"/>
        </classes>
    </test>

    <!-- Run tests on Firefox -->
    <test name="FirefoxTests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="org.amazon.LoginTests"/>
            <class name="org.amazon.RegistrationTests"/>
        </classes>
    </test>

    <!-- Run tests on Edge -->
    <test name="EdgeTests">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="org.amazon.LoginTests"/>
            <class name="org.amazon.RegistrationTests"/>
        </classes>
    </test>
</suite>
