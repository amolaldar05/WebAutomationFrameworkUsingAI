<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="AmazonWebAutomationSuite" parallel="classes" thread-count="5">
    <listeners>
        <listener class-name="org.Utils.TestListener"/>
    </listeners>
    <test name="LoginTests">
        <classes>
            <class name="org.amazon.LoginTests"/>
            <methods>
                <include name="validLoginTest"/>
                <include name="invalidLoginTest"/>
                <include name="forgotPasswordLinkTest"/>
                <include name="registerHereLinkTest"/>
            </methods>
        </classes>
    </test>
    <test name="RegistrationTests">
        <classes>
            <class name="org.amazon.RegistrationTests"/>
        </classes>
    </test>
</suite>